@model StudentCRUD.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<div class="container mt-4">

    ```
    <div class="card shadow-lg border-0 col-md-7 col-lg-6 mx-auto">

        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">➕ Add New Student</h4>
        </div>

        <div class="card-body">

            <form asp-action="Create" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter student name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Course" class="form-label fw-semibold"></label>
                    <input asp-for="Course" class="form-control form-control-lg" placeholder="Enter course name" />
                    <span asp-validation-for="Course" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label fw-semibold"></label>
                    <input asp-for="Age" class="form-control form-control-lg" placeholder="Enter age" />
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Student Photo</label>
                    <input type="file" name="ImageFile" class="form-control form-control-lg" />
                </div>

                <div class="d-grid gap-2 mt-3">
                    <button type="submit" class="btn btn-success btn-lg">
                        Save Student
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>

            </form>

        </div>
    </div>
    ```

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
