@model StudentCRUD.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">

    ```
    <div class="card shadow-lg border-0 col-md-7 col-lg-6 mx-auto">

        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">🗑 Delete Student</h4>
        </div>

        <div class="card-body text-center">

            <h5 class="text-danger mb-4">
                Are you sure you want to delete this student?
            </h5>

            @if (Model.ImagePath != null)
            {
                <div class="mb-3">
                    <img src="~/images/@Model.ImagePath" class="rounded shadow-sm" width="130" />
                </div>
            }

            <div class="mb-3">
                <h5 class="fw-bold">@Model.Name</h5>
                <p class="text-muted mb-1">Course: @Model.Course</p>
                <p class="text-muted">Age: @Model.Age</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">
                        Yes, Delete Student
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
    ```

</div>
